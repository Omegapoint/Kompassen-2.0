{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --check 'src/**/*'",
    "knex:migrate:latest": "knex --knexfile=db/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile=db/knexfile.ts migrate:rollback",
    "knex:seed:run": "if [ \"$NODE_ENV\" != \"production\" ]; then knex --knexfile=db/knexfile.ts seed:run; fi",
    "reseed": "yarn knex:migrate:rollback && yarn knex:migrate:latest && yarn knex:seed:run",
    "lint:check": "eslint --max-warnings 0 'src/**/*'",
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then node build/index.js; else nodemon; fi"
  },
  "nodemonConfig": {
    "exec": "npx ts-node ./src/index.ts",
    "ext": "ts,js,tsx,jsx",
    "watch": [
      "src"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "class-methods-use-this": 0,
      "no-underscore-dangle": 0,
      "import/order": 0,
      "import/prefer-default-export": 0
    }
  },
  "dependencies": {
    "camelcase": "^6.2.0",
    "cors": "^2.8.5",
    "date-fns": "^2.23.0",
    "express": "^4.17.1",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.4",
    "pg": "^8.7.1",
    "socket.io": "^4.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.4.5",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "knex": "^0.95.8",
    "nodemon": "^2.0.12",
    "objection": "^2.2.15",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
