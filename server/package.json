{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --check 'src/**/*'",
    "format:write": "prettier --write 'src/**/*'",
    "knex:migrate:latest": "knex --knexfile=db/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile=db/knexfile.ts migrate:rollback",
    "knex:seed:run": "knex --knexfile=db/knexfile.ts seed:run",
    "reseed": "yarn knex:migrate:rollback && yarn knex:migrate:latest && yarn knex:seed:run",
    "lint:check": "eslint --max-warnings 0 'src/**/*'",
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then node index.js; else nodemon; fi",
    "test": "echo 'Running tests... ðŸ§ª'"
  },
  "nodemonConfig": {
    "exec": "npx ts-node ./src/index.ts",
    "ext": "ts,js,tsx,jsx",
    "watch": [
      "src"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "class-methods-use-this": 0,
      "no-underscore-dangle": 0,
      "import/order": 0,
      "import/prefer-default-export": 0
    }
  },
  "resolutions": {
    "ansi-regex": "^5.0.1"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "camelcase": "^6.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "knex": "^0.95.14",
    "logform": "^2.4.0",
    "objection": "^3.0.0",
    "pg": "^8.7.1",
    "socket.io": "^4.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^16.11.11",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
